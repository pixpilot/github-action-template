{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*", "__tests__/**/*.ts", "__fixtures__/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
