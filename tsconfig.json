{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist", "__fixtures__"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
